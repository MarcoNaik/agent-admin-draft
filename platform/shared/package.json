{
  "name": "@struere/platform-shared",
  "version": "0.1.0",
  "private": true,
  "description": "Shared types and utilities for Struere platform",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./db": {
      "import": "./dist/db/index.js",
      "types": "./dist/db/index.d.ts"
    },
    "./routes": {
      "import": "./dist/routes/index.js",
      "types": "./dist/routes/index.d.ts"
    },
    "./permissions": {
      "import": "./dist/permissions/index.js",
      "types": "./dist/permissions/index.d.ts"
    },
    "./services/entity-indexer": {
      "import": "./dist/services/entity-indexer.js",
      "types": "./dist/services/entity-indexer.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "hono": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240222.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.3.0"
  }
}
