{
  "name": "@struere/platform-api",
  "version": "0.1.0",
  "private": true,
  "description": "Struere platform control plane API",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "build": "wrangler deploy --dry-run --outdir dist",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply struere-db",
    "db:migrate:local": "wrangler d1 migrations apply struere-db --local"
  },
  "dependencies": {
    "@struere/platform-shared": "workspace:*",
    "@clerk/backend": "^1.0.0",
    "hono": "^4.0.0",
    "drizzle-orm": "^0.29.0",
    "jose": "^5.2.0",
    "svix": "^1.15.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "drizzle-kit": "^0.20.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.0.0"
  }
}
