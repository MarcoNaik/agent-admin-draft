{
  "$schema": "https://struere.dev/schemas/policy/v1.json",
  "packId": "tutoring",
  "version": "1.0.0",
  "role": {
    "name": "admin",
    "description": "Full administrative access to all tutoring resources",
    "isSystem": true
  },
  "policies": [
    {
      "id": "admin_full_access",
      "description": "Administrators have full access to all resources",
      "resource": "*",
      "actions": ["create", "read", "update", "delete", "list"],
      "effect": "allow",
      "priority": 100,
      "scope": {
        "type": "field",
        "field": "organizationId",
        "operator": "eq",
        "value": "$actor.organizationId"
      },
      "fieldMasks": []
    }
  ],
  "capabilities": [
    "manage_entity_types",
    "manage_relations",
    "manage_policies",
    "manage_views",
    "manage_jobs",
    "view_audit_logs",
    "export_data",
    "import_data"
  ]
}
